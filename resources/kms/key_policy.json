{
    "Version": "2012-10-17",
    "Id": "AccessKeyPolicy",
    "Statement": [
        {
            "Sid": "Enable Root Permissions",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${account_id}:root"
            },
            "Action": "kms:*",
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:Encrypt*",
                "kms:Decrypt*",
                "kms:ReEncrypt*",
                "kms:GenerateDataKey*",
                "kms:Describe*"
            ],
            "Resource": "*",
            "Principal": {
                "AWS": "arn:aws:iam::${account_id}:role/${iam_role_name}"
            }
        },
        {
          "Sid": "Allow access for Key User (Cloudwatch Logs Service Principal)",
          "Effect": "Allow",
          "Principal": {"Service": "logs.${region}.amazonaws.com"},
          "Action": [
            "kms:Encrypt",
            "kms:GenerateDataKey*",
            "kms:Decrypt"
          ],
          "Resource": "*"
        },
        {
          "Sid": "Allow access for Key User (DynamoDB Service Principal)",
          "Effect": "Allow",
          "Principal": {"Service": "dynamodb.amazonaws.com"},
          "Action": [
            "kms:Encrypt",
            "kms:GenerateDataKey*",
            "kms:Decrypt"
          ],
          "Resource": "*"
        },
        {
          "Sid": "Allow access for Key User (SNS Service Principal)",
          "Effect": "Allow",
          "Principal": {"Service": "sns.amazonaws.com"},
          "Action": [
            "kms:Encrypt",
            "kms:GenerateDataKey*",
            "kms:Decrypt"
          ],
          "Resource": "*"
        }
    ]
}
